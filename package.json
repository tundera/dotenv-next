{
  "name": "dotenv-next",
  "version": "0.1.8",
  "description": "Load environment variables in your scripts following the priority specification popularized by Next.js",
  "license": "MIT",
  "homepage": "https://github.com/tundera/dotenv-next",
  "repository": {
    "type": "git",
    "url": "https://github.com/tundera/dotenv-next"
  },
  "author": {
    "name": "Philip Johnston",
    "url": "https://github.com/tundera",
    "email": "tunderadev@gmail.com"
  },
  "engines": {
    "node": "^12.20.0 || >=14.13.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs",
      "types": "./dist/*.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup-node",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "lint": "TIMING=1 eslint --ext .js,.ts ./src/**/*.ts ./test/**/*.ts",
    "commit": "cz",
    "prepare": "husky install",
    "prepublish": "yarn build",
    "size": "size-limit",
    "test": "echo \"No tests set up.\"",
    "test:watch": "jest --watch",
    "test:watch-coverage": "rimraf coverage && mkdirp coverage/lcov-report && concurrently --raw \"jest --watchAll\" \"serve -l 8787 coverage/lcov-report\" \"wait-on tcp:8787 coverage/lcov-report/index.html && open-cli http://localhost:8787\""
  },
  "dependencies": {
    "@next/env": "12.0.7"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "7.0.4",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.13",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "commitizen": "4.2.4",
    "concurrently": "6.4.0",
    "cz-emoji": "1.3.1",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "25.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "12.1.2",
    "prettier": "2.5.1",
    "pretty-quick": "3.1.2",
    "rimraf": "3.0.2",
    "size-limit": "7.0.4",
    "tslib": "2.3.1",
    "tsm": "^2.2.1",
    "tsup": "^5.11.4",
    "typescript": "^4.5.4"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.mjs",
      "limit": "10 KB"
    }
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
